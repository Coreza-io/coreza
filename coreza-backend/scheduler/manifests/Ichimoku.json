{
  "name": "Ichimoku Cloud",
  "def": "Ichimoku Cloud",
  "node_type": "main",
  "icon": "/assets/icons/ichimoku.svg",
  "category": "Indicators",
  "description": "Ichimoku Cloud indicator to visualize trend, momentum, and support/resistance levels",
  "color": "text-red-500",
  "size": { "width": 340, "height": 280 },
  "handles": [
    { "type": "target", "position": "left", "id": "input" },
    { "type": "source", "position": "right", "id": "output" }
  ],
  "action": {
    "url": "/indicators/ichimoku",
    "method": "POST"
  },
  "fields": [
    {
      "key": "candle_data",
      "label": "Candle Data",
      "type": "text",
      "required": true
    },
    {
      "key": "conversion_period",
      "label": "Conversion Line Period (Tenkan-sen)",
      "type": "text",
      "default": "9",
      "required": true
    },
    {
      "key": "base_period",
      "label": "Base Line Period (Kijun-sen)",
      "type": "text",
      "default": "26",
      "required": true
    },
    {
      "key": "leading_span_b_period",
      "label": "Leading Span B Period (Senkou Span B)",
      "type": "text",
      "default": "52",
      "required": true
    },
    {
      "key": "displacement",
      "label": "Displacement (Chikou Span)",
      "type": "text",
      "default": "26",
      "required": true
    }
  ]
}
