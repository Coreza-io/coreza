  "action": {
    "url": "/indicators/adx",
    "method": "POST"
  },
  "fields": [
    {
      "key": "candle_data",
      "label": "Candle Data",
      "type": "text",
      "required": true
    },
    {
      "key": "period",
      "label": "ADX Period",
      "type": "text",
      "placeholder": "e.g. 14",
      "default": "14",
      "required": true
    }
  ]
