{
  "name": "ADX",
  "def": "Average Directional Index",
  "node_type": "main",
  "icon": "/assets/icons/adx.svg",
  "category": "Indicators",
  "description": "ADX indicator to evaluate trend strength using DI+/DI- lines",
  "color": "text-yellow-500",
  "size": { "width": 320, "height": 240 },
  "handles": [
    { "type": "target", "position": "left", "id": "input" },
    { "type": "source", "position": "right", "id": "output" }
